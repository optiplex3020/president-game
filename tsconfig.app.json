{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "src",
    "data",
    "components/GameMain.tsx",
    "components/InitGameScreen.tsx",
    "components/PartySelector.tsx",
    "components/CabinetFormationRealistic.tsx",
    "components/PrimeMinisterSelectorAdvanced.tsx",
    "components/ErrorBoundary.tsx",
    "components/PresidentialDashboardFixed.tsx",
    "components/InteractiveGameSystem.tsx"
  ],
  "exclude": [
    "src/systems/EventSystem.ts",
    "src/systems/GameCore.ts",
    "src/systems/SocioEconomicModels.ts",
    "src/systems/DynamicEventGenerator.ts",
    "src/systems/DecisionConsequenceEngine.ts",
    "src/systems/PoliticalAI.ts",
    "src/systems/EconomicSimulation.ts",
    "components/CabinetFormationUltra.tsx",
    "components/CabinetFormationBasic.tsx",
    "components/CabinetFormationModern.tsx",
    "components/CabinetFormationSimplified.tsx",
    "components/CabinetFormationTest.tsx",
    "components/MinimalWorkingGame.tsx",
    "components/ParliamentView.tsx",
    "components/ParliamentScreen.tsx",
    "components/DiplomacyScreen.tsx",
    "components/EconomyScreen.tsx",
    "components/SocialFeed.tsx",
    "components/UltraSimpleDashboard.tsx",
    "components/PresidentialDashboard.tsx",
    "components/SimpleDashboard.tsx",
    "components/SimpleInitScreen.tsx",
    "components/InteractiveEventSystem.tsx"  
  ]
}
